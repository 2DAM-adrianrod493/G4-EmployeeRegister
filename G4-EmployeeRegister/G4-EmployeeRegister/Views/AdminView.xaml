<Window x:Class="G4_EmployeeRegister.Views.AdminView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:G4_EmployeeRegister.Views"
      mc:Ignorable="d" 
      Title="AdminView" Height="500" Width="800"
      ResizeMode="NoResize">

    <!-- Fondo -->
    <Window.Background>
        <ImageBrush ImageSource="../Resources/Fondos/fondo.jpg" Stretch="Fill" Opacity="0.5"/>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

            <!-- Header -->
        <Grid Grid.Column="0" Grid.Row="0" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <Image Source="/Resources/Iconos/logo.png"
                       Grid.Column="0"
                       Width="40"
                       HorizontalAlignment="Center"
                       Style="{StaticResource EstiloImagen}"/>

                <!-- Nombre Usuario -->
                <TextBlock Text="Adrián Rodríguez Rodríguez"
                           Grid.Column="1" 
                           VerticalAlignment="Center"
                           Style="{StaticResource EstiloTextoTitulo}"/>

                <!-- Botón Salir -->
                <Button x:Name="BotonSalir"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="BotonSalir_Click">
                    <Image Source="/Resources/Iconos/salir.png"
                           Width="38"
                           Style="{StaticResource EstiloImagen}"/>
                </Button>

            </Grid>

            <!-- Buscador -->
        <Grid Grid.Column="0" Grid.Row="1" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Botón Buscar -->
                <Button x:Name="BotonBuscar"
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="BotonBuscar_Click">
                    <Image Source="/Resources/Iconos/buscar-usuario.png"
                           Width="35"
                           Style="{StaticResource EstiloImagen}"/>
                </Button>

                <!-- Buscador -->
                <TextBox x:Name="BuscarPorNombreID"
                         Grid.Column="1"
                         HorizontalAlignment="Center"
                         Height="40" Width="400" Opacity="0.2"
                         Style="{StaticResource EstilosTextBox}"/>

                <!-- Botón Filtrar -->
                <Button x:Name="BotonFiltrar"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="BotonFiltrar_Click">
                    <Image Source="/Resources/Iconos/filtrar.png"
                           Width="30"
                           Style="{StaticResource EstiloImagen}"/>
                </Button>

            </Grid>

            <!-- Botones -->
        <Grid Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button Content="Añadir" Style="{StaticResource EstilosButton}" Width="200" Height="35" Click="ClickAñadir"/>
                    <Separator Width="20" Visibility="Hidden"/>
                    <Button Content="Editar" Style="{StaticResource EstilosButton}" Width="200" Height="35" Click="ClickEditar"/>
                    <Separator Width="20" Visibility="Hidden"/>
                    <Button Content="Eliminar" Style="{StaticResource EstilosButton}" Width="200" Height="35" Click="ClickEliminar"/>
            </StackPanel>
        </Grid>

            <!-- Lista Usuarios -->
        <Grid Grid.Row="3" VerticalAlignment="Top" Margin="15,20,15,0">
            <StackPanel Grid.Row="2">
                <DataGrid x:Name="HistorialUsuario"
                              AutoGenerateColumns="False"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              ColumnWidth="*"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              Style="{StaticResource EstilosDataGrid}">

                    <!-- Estilos -->
                    <DataGrid.CellStyle Style="{StaticResource EstilosDataGridCell}">
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID"  Binding="{Binding ID}" />
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" />
                        <DataGridTextColumn Header="Rol" Binding="{Binding Rol}" />
                        <DataGridTextColumn Header="Fichaje" Binding="{Binding Fichaje}" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
