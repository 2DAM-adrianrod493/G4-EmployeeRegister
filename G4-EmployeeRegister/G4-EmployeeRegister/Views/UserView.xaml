<Page x:Class="G4_EmployeeRegister.Views.UserView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:G4_EmployeeRegister.Views"
      mc:Ignorable="d" 
      Title="UserView" Height="450" Width="800">

    <!-- Fondo -->
    <Page.Background>
        <ImageBrush ImageSource="../Resources/Fondos/usuariofondo.jpg" Stretch="Fill"/>
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <Image Source="/Resources/Iconos/logo.png" Width="40" Style="{StaticResource EstiloImagen}" Grid.Column="0" VerticalAlignment="Center"/>

            <!-- Nombre Usuario -->
            <TextBlock Text="Adrián Rodríguez Rodríguez" Style="{StaticResource EstiloTextoTitulo}" Grid.Column="1" VerticalAlignment="Center"/>

        </Grid>

        <!-- Botones -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="Iniciar Jornada" Style="{StaticResource EstilosButton}" Grid.Column="0" Command="{Binding IniciarJornadaCommand}" Width="220" Height="45"/>

            <Button Content="Finalizar Jornada" Style="{StaticResource EstilosButton}" Grid.Column="2" Command="{Binding FinalizarJornadaCommand}" Width="200" Height="45"/>
        </Grid>

        <!-- Historial -->
        <Border Grid.Row="2" HorizontalAlignment="Center" Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <TextBlock Height="20"/>

                    <Grid Margin="0,10,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="400"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Fecha, Entrada y Salida -->
                        <TextBlock Text="Fecha" Style="{StaticResource EstilosSubtitulos}" Grid.Column="0" HorizontalAlignment="Center"/>
                        <TextBlock Text="Entrada" Style="{StaticResource EstilosSubtitulos}" Grid.Column="1" HorizontalAlignment="Center"/>
                        <TextBlock Text="Salida" Style="{StaticResource EstilosSubtitulos}" Grid.Column="2" HorizontalAlignment="Center"/>
                    </Grid>

                    <!-- Tabla -->
                    <ItemsControl ItemsSource="{Binding Historial}">

                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
