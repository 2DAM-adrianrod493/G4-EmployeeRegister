<Window x:Class="G4_EmployeeRegister.Views.FormularioDatos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:G4_EmployeeRegister.Views"
        mc:Ignorable="d"
        Title="FormularioDatos" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="../Resources/Fondos/fondo.jpg" Stretch="Fill" Opacity="0.5"/>
    </Window.Background>
    <Grid Grid.Column="1">
        <!-- Formulario -->
        <Border Style="{StaticResource EstilosBordesFormulario}" 
             HorizontalAlignment="Center" VerticalAlignment="Center" 
             Width="Auto" Height="Auto" Margin="0,0,0,0">
            <Grid>
                <!-- Filas -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Columnas -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>

                <!-- Username -->
                <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Username" Style="{StaticResource EstilosSubtitulos}"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
                    <TextBox x:Name="UsernameTextBox" Style="{StaticResource EstilosTextBox}" Text="{Binding Username}"/>
                </StackPanel>

                <!-- Nombre Usuario -->
                <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Nombre" Style="{StaticResource EstilosSubtitulos}"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="0,10,0,10">
                    <TextBox x:Name="NombreTextBox" Style="{StaticResource EstilosTextBox}" Text="{Binding Nombre}"/>
                </StackPanel>

                <!-- Apellidos Usuario -->
                <StackPanel Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Apellidos" Style="{StaticResource EstilosSubtitulos}"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="1"  VerticalAlignment="Center">
                    <TextBox x:Name="ApellidosTextBox" Style="{StaticResource EstilosTextBox}" Text="{Binding Apellidos}"/>
                </StackPanel>

                <!-- Email Usuario -->
                <StackPanel Grid.Row="3" Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Email" Style="{StaticResource EstilosSubtitulos}"/>
                </StackPanel>
                <StackPanel Grid.Row="3" Grid.Column="1" VerticalAlignment="Center">
                    <TextBox x:Name="EmailTextBox" Style="{StaticResource EstilosTextBox}" Text="{Binding Email}"/>
                </StackPanel>

                <!-- Contraseña Usuario -->
                <StackPanel Grid.Row="4" Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Contraseña" Style="{StaticResource EstilosSubtitulos}"/>
                </StackPanel>
                <StackPanel Grid.Row="4" Grid.Column="1" VerticalAlignment="Center">
                    <TextBox x:Name="ContraseñaTextBox" Style="{StaticResource EstilosTextBox}" Text="{Binding Contrasenia}"/>
                </StackPanel>

                <!-- Rol Usuario -->
                <StackPanel Grid.Row="5" Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Rol" Style="{StaticResource EstilosSubtitulos}"/>
                </StackPanel>
                <StackPanel Grid.Row="5" Grid.Column="1" VerticalAlignment="Center">
                    <TextBox x:Name="RolTextBox" Style="{StaticResource EstilosTextBox}" Margin="0,10,0,10"/>
                </StackPanel>

                <!-- Foto Usuario -->
                <StackPanel Grid.Row="6" Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Foto" Style="{StaticResource EstilosSubtitulos}"/>
                </StackPanel>
                <StackPanel Grid.Row="6" Grid.Column="1">
                    <Button Content="Seleccionar Imagen"  Style="{StaticResource EstilosButton}" VerticalAlignment="Center" Height="30"/>
                </StackPanel>

                <!-- Botones -->
                <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0">
                    <Button Content="Guardar" Style="{StaticResource EstilosButton}" Width="400" Height="30"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
